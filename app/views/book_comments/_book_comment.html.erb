<div>
  <h1>Logo<span class="d-block" style="font-size: 1vw;">sub title</span></h1>
  <% book.book_comments.each do |f| %>
    <div class="d-flex">
      <!-- コメントのプロフ画像 -->
      <div>
        <%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image, size:"50x50" %><br>
          <%= book.user.name %>
        <% end %>
      </div>
      <div class="align-self-center">
        <!-- コメント内容 -->
        <span><%= f.comment %></span>
        <!-- コメント削除ボタン -->
        <span><%= link_to 'Destroy', book_book_comment_path(book, f), method: :delete, remote: true, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{book.id}"%></span>
      </div>
    </div>
  <% end %>
</div>