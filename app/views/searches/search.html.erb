<table class="table table-hover table-inverse">
  
  <!--検索対象モデルがUserの時 -->
  <% if @range == "User" %>
  <h2>Users search for"<%= params[:word] %>"</h2>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
        </tr>
      <% end %>
    </tbody>
  
  <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
  <% else %>
  <h2>Books search for"<%= params[:word] %>"</h2>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
  
</table>